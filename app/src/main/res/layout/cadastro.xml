<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/etNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nome"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>

        <EditText
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Seleciona a Data"/>


        <EditText
            android:id="@+id/edValorNota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Valor da Nota R$"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btSelectFoto"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:text="Tirar Foto" />

            <Button
                android:id="@+id/btSelect"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:text="Selecionar Imagem" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivSelectedImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_launcher_foreground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btCadastro"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="Cadastrar"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btEnviaPDF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enviar" />

            <Button
                android:id="@+id/salvarPDF"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:text="Criar PDF"
                android:visibility="invisible"
                tools:visibility="invisible" />


        </LinearLayout>

    </LinearLayout>


</ScrollView>
